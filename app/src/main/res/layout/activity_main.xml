<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.a21vianet.sample.customview.MainActivity">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_xiaomi_parallax"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="仿小米滑动时差效果" />

        <Button
            android:id="@+id/btn_scoreview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="成绩显示效果" />

        <Button
            android:id="@+id/btn_addcar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="加入购物车特效" />

        <Button
            android:id="@+id/btn_countdown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="倒计时" />

        <Button
            android:id="@+id/btn_custom_behavior1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="自定义 Behavior 1" />

        <Button
            android:id="@+id/btn_custom_behavior2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="自定义 Behavior 2" />

        <Button
            android:id="@+id/btn_custom_behavior3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="自定义 Behavior 3" />

        <Button
            android:id="@+id/btn_pull_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="自定义 pullview" />

        <Button
            android:id="@+id/btn_password_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="PassWordEditText" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>